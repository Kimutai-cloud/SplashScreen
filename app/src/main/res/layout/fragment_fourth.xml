<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthFragment">

    <TextView
        android:id="@+id/textview_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the Fourth Page."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button_go_to_first"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:text="Go to the First Page"
        app:layout_constraintTop_toBottomOf="@id/textview_fourth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button_go_to_second"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:text="Go to the Second Page"
        app:layout_constraintTop_toBottomOf="@id/button_go_to_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button_go_to_third"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:text="Go to the Third Page"
        app:layout_constraintTop_toBottomOf="@id/button_go_to_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button_go_to_fifth"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:text="Go to the Fifth Page"
        app:layout_constraintTop_toBottomOf="@id/button_go_to_third"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
